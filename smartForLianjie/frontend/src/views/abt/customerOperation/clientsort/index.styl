.scroll {
  overflow-y auto
}
.searchbox {
    padding: 0.2rem 0.5rem;
    height: 1.5rem;
    .md-icon.icon-font.lg{
      font-size 0.6rem;
      color #B1B1B1
    }
    .closeicon{
      display: inline-block;
      i{
        position: relative;
        top:0.1rem
      }
    }
    .cancel {
      font-size: 0.4rem;
      text-align: center;
      display inline-block;
      width: 16%;
      height: 1.1rem;
      line-height: 1.1rem;
      color color-primary
    }
    .searchstart {
      height: 2rem;
      line-height: 2rem;
      font-size: 0.8rem;
      color: color-primary !important;
    }

}
.tabbar{
  /deep/ .md-tab-bar-inner{
    height 1.5rem;
  }
  /deep/ .md-tab-bar .scroll-view-container{
    height 1.3rem
  }
  /deep/ .md-tab-bar-item{
    font-size .4rem
    min-height: 1.3rem
  }
}
.iconbox{
    float: right;
    height: 1.1rem;
    line-height: 1.1rem;
    display: flex;
    align-items: center;
    justify-content: center;
}
.search {
    width: 75%;
    height: 1.1rem;
    line-height: 1.1rem;
    //background: url("../../../../assets/abt/img/fdj.png")
    background-size: .55rem;
    border-radius: 2rem;
    background-repeat: no-repeat;
    display: inline-block;
    background-color: #f0f0f0;
    background-position:.3rem;
    padding: 0 .3rem;
    .searchimg{
      height 1.1rem;
      width:1rem;
      float:left
    }
    input {
      width: 80%;
      height: 1.1rem;
      line-height: 1.1rem;
      font-size: 0.4rem;
      background-color: #f0f0f0;
    }
  }
  // 标签选择
  .md-example-popup{
    background-color white
    // height 100%;
    overflow-y auto
  }
  // .content /deep/ .md-popup-box{
