  .list{
    padding:1rem .5rem
    margin-bottom: .8rem;
  }
  .bqbox{
    padding-bottom .5rem
    p{
      font-size .5rem
      font-weight bold
      margin-bottom .2rem
    }
    .bqdiv{
      span{
        display: inline-block;
        height: .8rem;
        width: 25%;
        line-height: 0.8rem;
        text-align: center;
        margin: 0.1rem 0.25rem;
        font-size: 0.35rem;
        border 1px solid color-primary
        color color-primary
      }
      .active{
        background-color color-primary
        color white
      }
    }
  }
  .content{
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-flex-direction: column;
    -ms-flex-direction: column;
    flex-direction: column;
    -webkit-box-orient: vertical;
    width 100%;
    height 100vh
    .tabcontent{
      flex: 1;
      width: 100%;
      box-sizing: border-box;
      -webkit-overflow-scrolling: touch;
      background: #fff;
    }
  }
  .nodataimg{
      width: 80%;
      margin-left: 10%;
      margin-top: 20%;
  }
  .nodata_style{
      width: 80%;
      text-align: center
      margin-left: 10%;
      margin-top: 15%;
      .nodata_img{
        width:50%;
      }
      .nodata_text{
        color: #989898
        font-size: 0.36rem
        text-align: center
        letter-spacing: 0.03rem
      }
      .nodata_btn{
        width: 60%
        margin: auto
        height: 0.9rem
        color: #fff
        background-color color-primary
        border-radius: 0.2rem
        line-height: 0.9rem
        font-size: 0.38rem
        text-align: center
        letter-spacing: 0.1rem
        margin-top: 1.7rem
      }
  }
