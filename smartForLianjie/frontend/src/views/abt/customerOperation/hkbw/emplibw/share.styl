.tomybtn{
  width 80%;
  height 1rem;
  line-height 1rem;
  border 1px solid color-primary;
  margin 0 auto;
  text-align: center;
  font-size: .4rem;
  border-radius: 0.2rem;
  background-color color-primary;
  color white
}
header{
    margin-bottom 2rem
}
.userInfoBox {
    display: flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    height: 2.5rem;
    width: 88%;
    margin: .5rem auto;
    /* margin: 0.17rem 0.7rem 0; */
    background:  color-primary;
    border-radius: 0.2rem;
    .info {
        display: flex;
        align-items: center;
        width 60%
        .infoDetail {
            display: flex;
            flex-direction: column;
            justify-content: center;
            color: #fff;
            margin-left: 0.2rem;
            line-height: 0.7rem;
            span {
                font-size:0.45rem;
            }
            span:first-child {
                font-weight: 600;
            }
        }
       img {
            width: 1.5rem;
            height: 1.5rem !important;
            border-radius: 50%;
            margin-left: 0.2rem;
        } 
    }

    .btn {
        display: flex;
        align-items: center;
        margin-right: 10px;
        width 40%
        span{
            background: #fff;
            line-height: 0.7rem;
            border-radius: 0.35rem;
            color: color-primary;
            display: inline-block;
            width: 70%;
            margin: 0 auto;
            text-align: center;
            font-size: .4rem;
        }
    }
   
}
        


       
