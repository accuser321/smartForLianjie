.article-type-container {
  position: relative;
  height: 130px;
  .article-type {
    background: #fcfcfc;
    overflow: auto;
    position: relative;
    -webkit-overflow-scrolling: touch;
    height: 130px;
    margin-right:90px;
    border-bottom: 1px solid #f0f0f0;
        .type-lists {
            font-size:0.4rem;
            display: flex;
            width: auto;
            white-space: nowrap;
            li {
                padding: 35px 50px 25px;
                font-size: 0.4rem;
                background-color: white;
