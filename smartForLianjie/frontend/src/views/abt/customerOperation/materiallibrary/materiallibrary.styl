.content {
  .searchbox {
    font-size: .4rem;
    position: absolute;
    top: 0px;
    z-index: 999;
    width: 100%;
    background: white;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    padding: .15rem .4rem;
    background: #f0f0f0;
    height: 1.2rem;
    zoom: 1;
    .search1 {
      position relative
      width:85%;
      img {
        width .6rem
        height auto
        position absolute
        left 30px
      }
      input {
        width: 95%;
        padding-left: 1.2rem;
        height: .8rem;
        margin-top: .05rem;
        font-size: .4rem;
        border-radius 15px
      }
    }
    .search2 {
      height: .9rem;
      line-height: .9rem;
      font-size: .4rem;
      width: 100px;
      text-align: center;
      float:left!important;
    }
    .setmid {
      display: flex;
      align-items: center;
    }
  }
  .chooseBox {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 3;
    display: flex;
    justify-content: space-between;
    background: #fff;
    padding: 0 .875rem 0 .7rem;
    height: 1.2rem;
    width: 100%;
    box-sizing: border-box;
    align-items: center;
    /*background-color: #DEDEDE;*/
    .classificationBox {
      /*display: flex;*/
      /*align-items: center;*/
      width: 80%;
      .choose {
        float: left;
        width: 48%;
        border: 1px solid #c0c0c0;
        height: .8rem;
        line-height: .8rem;
        border-radius: .1rem;
        margin-right: 2%;
        padding: 0 20px;
        font-size: .35rem;
        .littileicon {
          font-size: .35rem;
          text-align right
          float right
          padding-top 20px
          // height: .8rem;
        }
      }
    }
  }
  .scroll {
    overflow-y auto
    padding-top 50px
    .poster {
      float left
      width 33%
      padding-top 20px
      padding-left 20px
      padding-right 20px
      position relative
      .img {
        width 100%
        height 500px
        position relative
      }
      .tally {
        position: absolute;
        right: 20px;
        top: 460px;
        padding: 0 .2rem;
        height: .6rem;
        line-height: .6rem;
        text-align: center;
        background: #006fbf;
        border-top-left-radius: .3rem;
        color: #fff;
      }
      .articaltitle {
        color: rgb(125,125,125);
        font-size: .35rem;
        height 100px
        padding: .15rem 0;
        width: 90%;
        margin: 0 auto;
        text-overflow: -o-ellipsis-lastline;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        line-clamp: 2;
        -webkit-box-orient: vertical;
      }
    }
  }
  .nodata {
    padding-top 50%
    text-align center
    .kongimg {
      width: 300px;
      height auto
    }
  }
}
.selectBody {
  padding-top 100px
  height 800px
  .typelist{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 1.2rem;
    padding: 0 .5rem;
    border-bottom: 1px solid rgb(239, 236, 236);
    span {
      font-size .4rem
    }
    img{
      width: auto
      height: .8rem;
      vertical-align:middle;
    }
  }
}
.search-enter-active, .search-leave-active {
  transition: all .5s ease;
}
.search-enter, .search-leave-to {
  transform: translateY(-10px);
  opacity: 0;
}
/deep/.md-landscape-content {
  width 740px
}
/deep/.md-popup-title-bar {
  position fixed!important
}